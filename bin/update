#!/usr/bin/env bash

# Variable definitions
. {ENV_LOCATION}

# Check if local hosts file isn't empty
if [ ! -f "$VBOX" ]; then
    echo "$VBOX : File not found!".
    echo "Aborted"
    exit 2
fi

# Iterate over each host
while IFS='' read -r line || [[ -n "$line" ]]; do
    # Get the ip
    ip=$(echo "$line" | awk '{print $1}')

    # Parse conf
    {MODULE_NAME}-parse-conf "$CONF/$ip"

    # Process
    export ANSIBLE_HOST_KEY_CHECKING=False
    ansible-playbook "$ANSIBLE_PLAYBOOK" --inventory-file="$ANSIBLE_INVENTORY"

    # Clean conf
    {MODULE_NAME}-clean-conf

done < "$VBOX"